<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:useDefaultMargins="true" >

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/display_text" />

    <EditText
        android:id="@+id/display_text"
        android:layout_width="@dimen/dialog_width"
        android:inputType="text" />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/speak_checkbox" />

    <CheckBox
        android:id="@+id/speak_checkbox"
        android:checked="false" />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/speech_text" />

    <EditText
        android:id="@+id/speech_text"
        android:layout_width="@dimen/dialog_width"
        android:inputType="text" />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:text="@string/image_text" />

    <LinearLayout
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/vocab_image_chosen"
            android:layout_width="@dimen/button_side_small"
            android:layout_height="@dimen/button_side_small"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/blank" />

        <Button
            android:id="@+id/image_choose_button"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/select" />
    </LinearLayout>

    <TextView
        android:id="@+id/link_label"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:text="@string/link_text" />

    <LinearLayout
        android:id="@+id/link_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/folder_image_chosen"
            android:layout_width="@dimen/button_side_small"
            android:layout_height="@dimen/button_side_small"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/blank" />

        <Button
            android:id="@+id/link_choose_button"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/select" />
    </LinearLayout>

</GridLayout>